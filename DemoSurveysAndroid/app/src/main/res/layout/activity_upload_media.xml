<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.onepointglobal.mysurveysn.UploadMediaActivity">


<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="image"
    android:layout_marginTop="10dp"
    android:id="@+id/img_btn"
    android:textColor="#FFFFFF"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:textStyle="bold"
    android:background="@drawable/rounded_button"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    />

<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="voice"
    android:id="@+id/voice_btn"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_above="@+id/img_btn"
    android:textColor="#FFFFFF"
    android:textStyle="bold"
    android:background="@drawable/rounded_button"
    android:layout_centerHorizontal="true"

    />

<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="video"
    android:layout_marginTop="10dp"
    android:textColor="#FFFFFF"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:textStyle="bold"
    android:background="@drawable/rounded_button"
    android:id="@+id/video_btn"
    android:layout_below="@+id/img_btn"
    android:layout_centerHorizontal="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:id="@+id/path_tv"
    android:maxLines="100"
    android:layout_below="@+id/video_btn"
    android:layout_centerHorizontal="true" />

<Button
    android:id="@+id/upload_btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/path_tv"
    android:text="upload"
    android:textColor="#FFFFFF"
    android:textStyle="bold"
    android:background="@drawable/rounded_button"/>

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/uniqueid_et"
    android:hint="uniqueid"
    android:layout_margin="10dp"
    android:layout_above="@+id/voice_btn"
    android:layout_centerHorizontal="true"
    android:background="@android:drawable/editbox_background_normal"/>
</RelativeLayout>

